<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NovigradProject"
        tools:targetApi="31">


        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegistrationActivity"
            android:label="@string/registration_activity_label">
            <!-- You can add intent filters here if needed for RegistrationActivity -->
        </activity>

        <activity
            android:name=".Client"
            android:label="@string/client_activity_label">
            <!-- You can add intent filters here if needed for ClientActivity -->
        </activity>

        <activity
            android:name=".Employee"
            android:label="@string/employee_activity_label">
            <!-- You can add intent filters here if needed for EmployeeActivity -->
        </activity>

        <activity
            android:name=".WelcomeActivity"
            android:label="@string/welcome_activity_label">
            <!-- You can add intent filters here if needed for WelcomeActivity -->
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="Login Activity">
            <!-- No intent filters, labels, and other activity attributes -->
        </activity>


        <activity
            android:name=".Admin"
            android:label="Admin Dashboard">
        </activity>


        <activity
            android:name=".AddServiceActivity"
            android:theme="@style/Theme.NovigradProject">
        </activity>

        <activity
            android:name=".ModifyServiceActivity"
            android:theme="@style/Theme.NovigradProject">
        </activity>

        <activity
            android:name=".ViewServicesActivity"
            android:theme="@style/Theme.NovigradProject">
        </activity>

        <activity
            android:name=".DeleteServiceActivity"
            android:theme="@style/Theme.NovigradProject">
        </activity>

    </application>




</manifest>
